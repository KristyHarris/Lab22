@model SearchRequest

<h1>Movie Search</h1>
<hr />
<hr />
<h4>Search by title keyword here.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchByTitle">
            <div class="form-group">
                <label asp-for="Keyword" class="control-label"></label>
                <input asp-for="Keyword" class="form-control" />
                <span asp-validation-for="Keyword" class="text-danger"></span>
                <div>
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </form>
        <hr />
        <hr />
        <h4>Search by genre here.</h4>
        <hr />
        <form asp-action="SearchResultGenre">
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" class="form-control">
                    <option>Scifi</option>
                    <option>Animated</option>
                    <option>Drama</option>
                    <option>Horror</option>
                </select>
            </div>
            <div>
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
